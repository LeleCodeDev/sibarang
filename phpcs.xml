<?xml version="1.0"?>
<ruleset name="LaravelCustom">
    <description>Custom rules for Laravel Project.</description>

    <rule ref="PSR12">
        <exclude name="Squiz.Commenting.ClassComment.Missing"/>
        <exclude name="Squiz.Commenting.FunctionComment.Missing"/>
        <exclude name="Generic.Commenting.DocComment.Missing"/>
        <exclude name="Squiz.Functions.MultiLineFunctionDeclaration.BraceOnSameLine"/>
        <exclude name="Squiz.Functions.MultiLineFunctionDeclaration.BraceAlone"/>
        <exclude name="Squiz.Functions.MultiLineFunctionDeclaration.NewlineAfterOpenBrace"/>
        <exclude name="PEAR.Functions.FunctionDeclaration.NewlineAfterOpenBrace"/>

    </rule>

    <file>app</file>
    <file>config</file>
    <file>database</file>
    <file>resources</file>
    <file>routes</file>
    <file>tests</file>
</ruleset>
